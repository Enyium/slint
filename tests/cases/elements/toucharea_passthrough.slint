export component TestCase {
    width: 300px;
    height: 300px;

    out property <bool> first-clicked;
    out property <bool> second-pressed;
    out property <bool> second-clicked;
    out property <bool> underneath-pressed <=> underneath-area.pressed;
    out property <bool> above-pressed <=> above-area.pressed;

    first := Rectangle {
        x: 0px;
        width: 50%;
    }

    second := Rectangle {
        x: parent.width / 2;
        width: 50%;
    }

    underneath-area := TouchArea {
        clicked => {
            first.background = rgb(255, 0, 0);
            root.first-clicked = true;
        }
    }

    above-area := TouchArea {
        event-passthrough: true;
        pointer-event(event) => {
            if (event.kind == PointerEventKind.down) {
                second.background = rgb(0, 255, 0);
                root.second-pressed = true;
            }
        }
        clicked => {
            // Should not happen
            second-clicked = true;
        }
    }
}

